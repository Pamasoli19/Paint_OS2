<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_paint__so__ii"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jpmscr19gmail.paint_4_os2.Paint_SO_II"
    tools:showIn="@layout/activity_paint__so__ii">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_weight="1.08"
        android:layout_height="0dp">

        <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:layout_weight="1"
            tools:ignore="ButtonStyle" />

        <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:layout_weight="1"
            tools:ignore="ButtonStyle" />

        <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_weight="1"
            tools:ignore="ButtonStyle" />

        <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_weight="1"
            tools:ignore="ButtonStyle" />

    </LinearLayout>

    <view
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:layout_height="0dp"
        class="com.jpmscr19gmail.paint_4_os2.Lienzo"
        android:id="@+id/view"
        android:background="#ffffffff"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="@dimen/alturacolor"
            app:srcCompat="@android:color/holo_orange_light"
            android:id="@+id/imageButton5"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="@dimen/alturacolor"
            app:srcCompat="@android:color/black"
            android:id="@+id/imageButton4"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="@dimen/alturacolor"
            app:srcCompat="@android:color/holo_red_dark"
            android:id="@+id/imageButton3"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="@dimen/alturacolor"
            app:srcCompat="@android:color/holo_green_light"
            android:id="@+id/imageButton2"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="@dimen/alturacolor"
            app:srcCompat="@android:color/holo_blue_dark"
            android:id="@+id/imageButton"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>